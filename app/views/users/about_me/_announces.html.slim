.row
  .col-xs-12.center
    h1
      = title_with_image '034-microphone.png', 'announces.announces'
      = image_tag('transp.png')
      = link_to fa_icon('plus'), new_announce_path
- Announce.shown_as_active.each do |announce|
  .announce-container
    div.announce-title
      = announce.title
    .announce-body
      span.announce-badge
        = badge_user_for_comment(announce.author, 40)
      = announce.body
      p.announce-timing
        |DÃ©but :
        = l announce.time_start, format: '%a %d %b'
        | - Fin :
        = l announce.time_end, format: '%a %d %b'
